  <script>
    function navigateTo(route) {
            window.location.href = route;
        }

    function checkPasswordStrength(password) {
      const indicator = document.getElementById('strengthIndicator');
      const bar = document.getElementById('strengthBar');
      if (!indicator || !bar) return;

      if (!password || password.length === 0) {
        indicator.style.display = 'none';
        bar.className = 'strength-bar';
        return;
      }

      indicator.style.display = 'block';
      let strength = 0;
      if (password.length >= 8) strength++;
      if (/[A-Z]/.test(password)) strength++;
      if (/[0-9]/.test(password)) strength++;
      if (/[^A-Za-z0-9]/.test(password)) strength++;

      bar.className = 'strength-bar';
      switch (strength) {
        case 0: bar.style.width = '0%'; break;
        case 1: bar.classList.add('strength-weak'); break;
        case 2: bar.classList.add('strength-fair'); break;
        case 3: bar.classList.add('strength-good'); break;
        case 4: bar.classList.add('strength-strong'); break;
      }
    }

    function isValidEmail(email) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }

    // Notifications
    function showNotification(message, type = 'success') {
      const container = document.getElementById('notificationContainer');
      if (!container) return;

      const notification = document.createElement('div');
      notification.className = `notification ${type}`;
      notification.innerHTML = `
        <div style="display:flex;align-items:center;gap:0.5rem">
          <div style="flex-shrink:0">${type === 'success' ? '<svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>' : '<svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>'}</div>
          <div style="font-size:0.95rem">${message}</div>
          <div style="margin-left:auto"><button class="dismiss-btn" style="background:transparent;border:none;color:inherit;cursor:pointer;padding:4px" aria-label="Dismiss">&times;</button></div>
        </div>
      `;

      container.appendChild(notification);
      // small delay to animate in
      setTimeout(() => notification.classList.add('show'), 50);

      // dismiss handler
      const btn = notification.querySelector('.dismiss-btn');
      btn.addEventListener('click', () => hideNotification(btn));

      // auto hide
      setTimeout(() => {
        hideNotification(btn);
      }, 5000);
    }

    function hideNotification(buttonOrElem) {
      if (!buttonOrElem) return;
      const notification = buttonOrElem.closest ? buttonOrElem.closest('.notification') : buttonOrElem;
      if (!notification) return;
      notification.classList.remove('show');
      setTimeout(() => { try { notification.remove(); } catch (e) {} }, 300);
    }

    // Form submit simulation
    function processLogin(e) {
      e && e.preventDefault();
      const email = document.getElementById('loginEmail').value.trim();
      const password = document.getElementById('loginPassword').value;

      if (!email || !password) { showNotification('Please fill in all fields', 'error'); return; }
      if (!isValidEmail(email)) { showNotification('Please enter a valid email address', 'error'); return; }

      const loginBtn = document.getElementById('loginBtn');
      const loginBtnText = document.getElementById('loginBtnText');
      const loginSpinner = document.getElementById('loginSpinner');

      loginBtnText.textContent = 'Signing you in...';
      loginSpinner.style.display = 'inline-block';
      loginBtn.disabled = true; loginBtn.style.opacity = '0.7';

      // fake API call
      setTimeout(() => {
        showNotification('Login successful! Welcome back to SurakshƒÅ', 'success');
        // reset
        document.getElementById('loginEmail').value = '';
        document.getElementById('loginPassword').value = '';
        document.getElementById('strengthIndicator').style.display = 'none';

        loginBtnText.textContent = 'Sign In to SurakshƒÅ';
        loginSpinner.style.display = 'none';
        loginBtn.disabled = false; loginBtn.style.opacity = '1';

        // redirect placeholder (uncomment in production)
        // window.location.href = '/dashboard';
      }, 1400);
    }

    function showSignup() { showNotification('Redirecting to registration...', 'success'); setTimeout(() => { /* window.location.href='/signup' */ }, 700); }

    function socialLogin(provider) {
      showNotification(`Connecting with ${provider.charAt(0).toUpperCase() + provider.slice(1)}...`, 'success');
      setTimeout(() => showNotification(`${provider.charAt(0).toUpperCase() + provider.slice(1)} login is currently in development`, 'error'), 1300);
    }

    function showForgotPassword() { showNotification('Password reset link would be sent to your email', 'success'); }

    function togglePasswordVisibility() {
      const pwd = document.getElementById('loginPassword');
      const eyeOpen = document.getElementById('eyeOpen');
      const eyeClosed = document.getElementById('eyeClosed');
      if (!pwd) return;
      if (pwd.type === 'password') {
        pwd.type = 'text';
        eyeOpen.style.display = 'inline-block';
        eyeClosed.style.display = 'none';
      } else {
        pwd.type = 'password';
        eyeOpen.style.display = 'none';
        eyeClosed.style.display = 'inline-block';
      }
    }

    // small UX helpers
    document.addEventListener('DOMContentLoaded', function() {
      const email = document.getElementById('loginEmail'); if (email) email.focus();
      setTimeout(() => showNotification('Welcome to SurakshƒÅ! Please sign in to continue.', 'success'), 900);

      // ctrl+enter submits
